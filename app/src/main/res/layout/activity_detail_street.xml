<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailStreetActivity">

    <TextView
        android:id="@+id/tv_street_name_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Jl. Nama Jalan" />

    <TextView
        android:id="@+id/tv_vehicle_number_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="@id/tv_street_name_detail"
        app:layout_constraintStart_toStartOf="@id/tv_street_name_detail"
        app:layout_constraintTop_toBottomOf="@id/tv_street_name_detail"
        tools:text="256" />

    <TextView
        android:id="@+id/tv_vehicle_number_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/vehicles_per_hour"
        app:layout_constraintEnd_toEndOf="@id/tv_vehicle_number_detail"
        app:layout_constraintStart_toStartOf="@id/tv_vehicle_number_detail"
        app:layout_constraintTop_toBottomOf="@id/tv_vehicle_number_detail" />

    <TextView
        android:id="@+id/tv_status_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/tv_vehicle_number_detail"
        app:layout_constraintStart_toStartOf="@id/tv_vehicle_number_detail"
        app:layout_constraintTop_toBottomOf="@id/tv_vehicle_number_subtitle"
        tools:text="Lancar" />

    <TextView
        android:id="@+id/tv_car_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/car"
        app:layout_constraintEnd_toStartOf="@id/tv_truck_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_status_detail" />

    <TextView
        android:id="@+id/tv_truck_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/truck"
        app:layout_constraintEnd_toStartOf="@id/tv_motorcycle_title"
        app:layout_constraintStart_toEndOf="@id/tv_car_title"
        app:layout_constraintTop_toTopOf="@id/tv_car_title" />

    <TextView
        android:id="@+id/tv_motorcycle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/motorcycle"
        app:layout_constraintStart_toEndOf="@id/tv_truck_title"
        app:layout_constraintTop_toTopOf="@id/tv_truck_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_car_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/tv_car_title"
        app:layout_constraintStart_toStartOf="@id/tv_car_title"
        app:layout_constraintTop_toBottomOf="@id/tv_car_title"
        tools:text="100" />

    <TextView
        android:id="@+id/tv_truck_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/tv_truck_title"
        app:layout_constraintStart_toStartOf="@id/tv_truck_title"
        app:layout_constraintTop_toBottomOf="@id/tv_truck_title"
        tools:text="56" />

    <TextView
        android:id="@+id/tv_motorcycle_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/tv_motorcycle_title"
        app:layout_constraintStart_toStartOf="@id/tv_motorcycle_title"
        app:layout_constraintTop_toBottomOf="@id/tv_motorcycle_title"
        tools:text="100" />

</androidx.constraintlayout.widget.ConstraintLayout>
